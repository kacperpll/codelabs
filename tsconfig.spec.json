/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/spec",
    "types": [
      "jasmine"
    ],
    "paths": {
        "@app/*": [
            "src/app/*"
        ],
        "@env/*": [
            "src/environments/*"
        ],
        "@shared/*": [
            "src/app/modules/shared/*"
        ],
        "@albums/*": [
            "src/app/modules/albums/*"
        ],
        "@widget/*": [
            "src/app/modules/widget/*"
        ],
    }
  },
  "include": [
    "src/**/*.spec.ts",
    "src/**/*.d.ts"
  ]
}
